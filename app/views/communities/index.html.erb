<% content_for :community_label, "All Communities" %>
<% content_for :primary_content do %>
  <% if @communities.any? %>
    <h1 class="text-3xl font-bold mb-6">Communities</h1>
    <ul id="communities" class="divide-y list-none">
      <% @communities.each do |community| %>
        <%= render community %>
      <% end %>
    </ul>
  <% else %>
    <div class="p-10 text-center">
      <div class="flex justify-center mb-3">
        <%= render_svg "icons/empty" %>
      </div>
      <p class="mb-4">Wow, such empty...</p>
      <%= link_to "Create a new community", new_community_path, class: "btn btn-indigo" %>
    </div>
  <% end %>
<% end %>
<% content_for :secondary_content do %>
  <%= link_to "+ New community", new_community_path, class: "btn btn-indigo block" %>
<% end %>
<%= render "basic_layout" %>